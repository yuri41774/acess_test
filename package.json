{
  "name": "acess_test-electron",
  "version": "1.0.0",
  "description": "Wrapper Electron para o projeto de testes de acessibilidade (site est√°tico)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win --x64",
    "generate-changelog": "node ./tools/release/generate-changelog.js",
    "dist:win:portable": "electron-builder --win portable --x64",
    "prepare": "husky install",
    "install-hooks": "sh tools/setup-husky.sh"
  },
  "build": {
    "appId": "com.example.acess_test",
    "productName": "AcessTest",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "@octokit/rest": "^20.0.2",
    "husky": "^8.0.0"
  }
}
